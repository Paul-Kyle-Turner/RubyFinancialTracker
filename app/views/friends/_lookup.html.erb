<html>
    <h1>
        Friends
    </h1>
    <h3>Search for friend</h3>
    <div id="friend-lookup">
        
        <%= form_tag "search_friends", remote: true, method: :get, id: "friend-lookup-form" do %>
        
        <div class="form-group row no-padding text-center col-md-12">
            <div class="col-md-10">
                <%= text_field_tag :search_param, params[:search_param], 
                                  placeholder: "Enter a name or email", autofocus: true,
                                  class: "form-control search-box input-lg" %>
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                <i> </i> Look up a friend
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
      
    <div id="results">
        <%= render 'friends/result' %>
    </div>
    
</html>